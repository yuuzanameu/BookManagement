{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "bundler", // Changed from "node"
        "allowImportingTsExtensions": false, // Make sure this is false
        "declaration": true,
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}

